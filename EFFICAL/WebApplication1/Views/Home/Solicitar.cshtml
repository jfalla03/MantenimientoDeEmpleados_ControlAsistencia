@model WebApplication1.Models.SolicitudesJustificacion
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Solicitar Justificación de Inasistencia</title>
    <link rel="stylesheet" href="/css/home/solicitar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Add your custom styles here */
        body {
            background-color: #f6f6f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            font-size: 28px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            border: 2px solid #f43b47;
            border-radius: 8px;
            transition: border-color 0.3s ease;
            color: #555;
            font-weight: 500;
            background-color: #f9f9f9;
        }

            .form-control::placeholder {
                color: #999;
            }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 8px #f43b47;
            }

        .btn-primary {
            background: linear-gradient(to right, #f43b47, #453a94);
            border: none;
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #453a94, #f43b47);
            }

        .btn-secondary {
            background: #ccc;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-secondary:hover {
                background: #aaa;
            }

        .btn-link {
            color: #f43b47;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .btn-link:hover {
                color: #453a94;
            }

        /* Add pattern background style here */
        .pattern-background {
            background-image: url(''); /* URL of the pattern image */
            background-repeat: repeat;
            background-size: 250px; /* Size of the pattern */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center"><i class="fas fa-clipboard"></i> Solicitar Justificación de Inasistencia</h1>

        <form asp-action="Solicitar" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Motivo"><i class="fas fa-info-circle"></i> Motivo:</label>
                <textarea class="form-control" asp-for="Motivo" id="Motivo" rows="4" required></textarea>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="RutaImagen"><i class="fas fa-image"></i> Adjuntar Imagen:</label>
                <input type="file" name="RutaImagen" accept="image/*" class="form-control-file" id="RutaImagen" required>
                <span asp-validation-for="RutaImagen" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-paper-plane"></i> Enviar Solicitud</button>
        </form>

        <div class="text-center mt-3">
            <form asp-action="Index">
                <button type="submit" class="btn btn-secondary"><i class="fas fa-undo"></i> Volver</button>
            </form>
            <a href="@Url.Action("ListarMisSolicitudes", "Home")" class="btn btn-link"><i class="fas fa-list"></i> Ver Mis Solicitudes</a>
        </div>
    </div>
    <!-- Include your JavaScript and other scripts here -->
</body>
</html>
