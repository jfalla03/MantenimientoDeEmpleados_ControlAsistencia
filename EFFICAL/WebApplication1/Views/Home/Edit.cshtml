@model WebApplication1.Models.Empleado

@{
    Layout = null;
}
<link rel="stylesheet" href="/css/home/edit.css">

<style>
    body {
        background-color: #f6f6f6;
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .form-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Add your custom styles here */
    /* ... (existing styles) ... */
</style>

<div class="container">
    <div class="col-md-4 form-container">
        <h1>Editar Empleado</h1>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodEmpleado" class="control-label"></label>
                <input asp-for="CodEmpleado" class="form-control" required />
                <span asp-validation-for="CodEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomEmpleado" class="control-label"></label>
                <input asp-for="NomEmpleado" class="form-control" required />
                <span asp-validation-for="NomEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApeEmpleado" class="control-label"></label>
                <input asp-for="ApeEmpleado" class="form-control" required />
                <span asp-validation-for="ApeEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DniEmpleado" class="control-label"></label>
                <input asp-for="DniEmpleado" class="form-control" required />
                <span asp-validation-for="DniEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirecMpleado" class="control-label"></label>
                <input asp-for="DirecMpleado" class="form-control" />
                <span asp-validation-for="DirecMpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeleEmpleado" class="control-label"></label>
                <input asp-for="TeleEmpleado" class="form-control" required />
                <span asp-validation-for="TeleEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailEmpleado" class="control-label"></label>
                <input asp-for="EmailEmpleado" class="form-control" required />
                <span asp-validation-for="EmailEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label"></label>
                <input asp-for="NombreUsuario" class="form-control" required />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="ListaEmpleados" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

